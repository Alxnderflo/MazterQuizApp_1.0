<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:background="@drawable/top_line"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_line"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Número y enunciado de la pregunta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumPregunta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="1."
                    android:textColor="#2C2C4A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEnunciado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enunciado de la pregunta"
                    android:textColor="#2C2C4A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Botón para eliminar -->
                <ImageButton
                    android:id="@+id/btnElimP"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eliminar preguntas"
                    android:padding="4dp"
                    android:src="@drawable/ico_del_question"
                    app:tint="#EF0909"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <!-- Respuesta correcta -->
            <TextView
                android:id="@+id/tvCorrecta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="R/ Respuesta correcta"
                android:textColor="#999797"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Línea divisoria debajo del CardView -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="#E0E0E0" />

</LinearLayout>