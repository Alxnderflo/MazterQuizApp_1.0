<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <!-- Contenedor de imagen con fondo redondeado -->
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#6366F1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ico_play"
                    app:tint="@android:color/white"
                    android:padding="0dp" />

            </androidx.cardview.widget.CardView>

            <!-- Contenedor de texto -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Título del quiz -->
                <TextView
                    android:id="@+id/txtQuizT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/tv_score_titulo_quiz"
                    android:textColor="#1A1A1A"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp" />

                <!-- Información de estadísticas -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Intentos -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_score_titulo_intentos"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtIntentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_score_num_intentos"
                        android:textColor="#6366F1"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- Separador -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#D1D5DB"
                        android:rotation="45" />

                    <!-- Mejor resultado -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_score_titulo_mejor"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtMejor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_score_promedio_mejor"
                        android:textColor="#10B981"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- Separador -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#D1D5DB"
                        android:rotation="45" />

                    <!-- Último puntaje -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_score_titulo_ultimo"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtUltimo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_score_promedio_ultimo"
                        android:textColor="#F59E0B"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>