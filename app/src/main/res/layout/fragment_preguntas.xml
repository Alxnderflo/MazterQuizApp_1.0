<?xml version="1.0" encoding="utf-8"?>
<!--fragment_preguntas.xml-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER MORADO mejorado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="24dp"
            android:paddingEnd="20dp"
            android:paddingBottom="80dp">

            <!-- Barra de progreso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ProgressBar
                    android:id="@+id/barraProgreso"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:max="20"
                    android:progress="1"
                    android:progressBackgroundTint="#8B7EF7"
                    android:progressTint="@android:color/white" />

                <TextView
                    android:id="@+id/tvProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/tv_resolver_quiz_contador"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Título del quiz -->
            <TextView
                android:id="@+id/ivTituloQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="@string/tv_resolver_titulo_del_quiz"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Número de pregunta -->
            <TextView
                android:id="@+id/tvNumPreguntaQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_resolver_info_pregunta"
                android:textColor="#C7D2FE"
                android:textSize="14sp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Card del enunciado flotante (se superpone al header) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-60dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Label "Pregunta" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Pregunta"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <!-- Enunciado de la pregunta -->
                    <TextView
                        android:id="@+id/tvEnunciadoPregunta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/tv_resolver_enunciado_pregunta"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Opciones de respuesta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Selecciona una respuesta"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Opción A -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpcionA"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/tv_resolver_respuesta_a"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#2D2D2D"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="16dp"
                app:elevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="2dp" />

            <!-- Opción B -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpcionB"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/tv_resolver_respuesta_b"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#2D2D2D"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="16dp"
                app:elevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="2dp" />

            <!-- Opción C -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpcionC"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/tv_resolver_respuesta_c"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#2D2D2D"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="16dp"
                app:elevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="2dp" />

            <!-- Opción D -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpcionD"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:layout_marginBottom="24dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/tv_resolver_respuesta_d"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#2D2D2D"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="16dp"
                app:elevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>