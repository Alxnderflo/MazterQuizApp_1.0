<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título Mis Quizzes -->
            <TextView
                android:id="@+id/tvMyQuizzes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Mis Quizzes"
                android:textColor="#1F1F1F"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- RecyclerView para los quizzes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuizzes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clipToPadding="false"
                android:paddingBottom="100dp"
                android:visibility="gone" />

            <!-- Vista vacía para cuando no hay quizzes -->
            <LinearLayout
                android:id="@+id/layoutVacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="visible">

                <!-- Ícono de quiz vacío -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/ico_empty_quiz"
                    app:tint="#A855F7"
                    android:alpha="0.8" />

                <!-- Texto "No hay ningún quizz creado" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="No hay ningún quiz creado"
                    android:textColor="#5A5A5A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Texto "Crea uno para comenzar" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Crea uno para comenzar"
                    android:textColor="#9E9E9E"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- FAB para crear quiz -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCrearQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Crear nuevo quiz"
        android:src="@drawable/ico_add"
        app:backgroundTint="#6B7EF7"
        app:tint="@android:color/white"
        app:elevation="6dp"
        app:borderWidth="0dp" />

</FrameLayout>