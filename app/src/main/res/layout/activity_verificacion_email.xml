<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- Espacio de arriba -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ico_mail"
                app:tint="#6266F1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifica tu email"
                android:textColor="#6266F1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivMq"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/nombre_master_quiz" />

        </LinearLayout>

    </FrameLayout>

    <!-- Contenedor con gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Información del email -->
        <TextView
            android:id="@+id/tvEmailInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Hemos enviado un correo de verificación a:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Instrucciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ico_warning"
                    app:tint="#FFD700"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para activar tu cuenta:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvInstrucciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Revisa tu bandeja de entrada\n• Si no encuentras el correo, revisa la carpeta SPAM\n• Haz clic en el enlace de verificación\n• Una vez verificado, podrás iniciar sesión"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón reenviar correo -->
        <Button
            android:id="@+id/btnReenviarCorreo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00D4BA"
            android:elevation="4dp"
            android:text="Reenviar correo de verificación"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <!-- Botón ir al login -->
        <Button
            android:id="@+id/btnIrALogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#ED3F3F"
            android:elevation="4dp"
            android:text="Ir a Iniciar Sesión"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

    </LinearLayout>
</LinearLayout>