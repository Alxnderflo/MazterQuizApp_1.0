<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iconoProfesor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ico_profe"
                    android:contentDescription="@string/descripcion_ico_profesor"
                    app:tint="@color/color_profesor_1" />

                <TextView
                    android:id="@+id/txtNombreProfesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/tv_listar_nombre_profesor"
                    android:textColor="#1F1F1F"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnEliminarProfesor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/descripcion_btn_eliminar_profesor"
                android:padding="4dp"
                android:src="@drawable/ico_del_question"
                app:tint="#EF0909"
                tools:ignore="TouchTargetSizeCheck" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>