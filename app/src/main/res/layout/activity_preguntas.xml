<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F9"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> <!-- Header Card con información del Quiz -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="18dp">

                <!-- Imagen del Quiz -->
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="#6366F1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgQuizHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/descripcion_quiz_image"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        tools:ignore="ImageContrastCheck" />
                </androidx.cardview.widget.CardView>

                <!-- Contenedor de información del Quiz -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Título del Quiz -->
                    <TextView
                        android:id="@+id/tvHeaderT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/tv_quizz_titulo"
                        android:textColor="#1A1A1A"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp" />

                    <!-- Descripción del Quiz -->
                    <TextView
                        android:id="@+id/tvHeaderD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/quiz_descripcion"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <!-- Información adicional: preguntas y fecha -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Icono de lista para preguntas -->
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@string/descripcion_preguntas_icon"
                            android:src="@drawable/ico_list"
                            app:tint="#6366F1"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/tvHeaderNumQ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/tv_num_preguntas"
                            android:textColor="#4B5563"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <!-- Separador -->
                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="#D1D5DB"
                            android:rotation="45" />

                        <!-- Icono de calendario -->
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@string/descripcion_fecha_icon"
                            android:src="@drawable/ico_date"
                            app:tint="#10B981"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/tvHeaderFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/tv_fecha_creacion_quiz_propio"
                            android:textColor="#4B5563"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView><!-- Contenedor principal con padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"> <!-- Título y botón agregar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_lista_de_preguntas"
                    android:textColor="#1F1F1F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:backgroundTint="#6B7EF7"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/btn_add_pregunta"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="12dp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TextContrastCheck" />
            </LinearLayout> <!-- Botón Iniciar Quiz (solo visible cuando hay preguntas) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarQuiz"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btn_iniciar_quiz"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#53DB50"
                app:cornerRadius="12dp"
                app:icon="@drawable/ico_play"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" /> <!-- RecyclerView con EXACTAMENTE la misma configuración que en fragment_teacher -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="100dp"
                android:visibility="gone" /> <!-- Vista vacía para cuando no hay preguntas -->
            <LinearLayout
                android:id="@+id/layoutVacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="visible"> <!-- Ícono -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.8"
                    android:src="@drawable/ico_empty_question"
                    app:tint="#A855F7"
                    tools:ignore="ContentDescription,ImageContrastCheck" /> <!-- Texto vacío --> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="@string/tv_no_hay_preguntas"
                    android:textColor="#5A5A5A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:text="@string/tv_para_el_quiz"
                    android:textColor="#9E9E9E"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" /> <!-- Botón Crear pregunta en la vista vacía -->
                <Button
                    android:id="@+id/btnCrearPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:backgroundTint="#6B7EF7"
                    android:elevation="4dp"
                    android:text="@string/btn_crear_pregunta"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>