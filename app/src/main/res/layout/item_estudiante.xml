<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <!-- Contenedor de Ã­cono con efecto de capas -->
            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <!-- Capa de fondo con gradiente simulado -->
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="#E0E7FF"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp" />

                <!-- Capa media -->
                <androidx.cardview.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#C7D2FE"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp" />

                <!-- Capa frontal con Ã­cono -->
                <androidx.cardview.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#6366F1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/descripcion_ico_student"
                        android:padding="14dp"
                        android:src="@drawable/ico_student"
                        app:tint="@android:color/white" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <!-- Contenedor de informaciÃ³n del estudiante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Badge + Nombre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Badge "Estudiante" -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#DBEAFE"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="2dp"
                            android:text="ðŸ‘¤"
                            android:textSize="10sp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txtNombreEstudiante"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/tv_nombre_estudiante"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="Juan PÃ©rez" />

                </LinearLayout>

                <!-- Email con Ã­cono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="ðŸ“§"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtEmailEstudiante"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/tv_email"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        tools:text="juan.perez@email.com" />

                </LinearLayout>

            </LinearLayout>

            <!-- BotÃ³n de expulsar con diseÃ±o premium -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="#FEE2E2"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExpulsarEstudiante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/descripcion_btn_mas_opciones"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    app:backgroundTint="#EF4444"
                    app:cornerRadius="10dp"
                    app:elevation="4dp"
                    app:icon="@drawable/ico_close"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"

                    app:iconSize="18dp"
                    app:iconTint="@android:color/white"
                    tools:ignore="TouchTargetSizeCheck" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
