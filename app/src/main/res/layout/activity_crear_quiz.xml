<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:overScrollMode="always">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <!-- Título principal centrado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/tv_titulo_crear_quiz"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Título: Título del Quiz con asterisco -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_add_titulo_quiz"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/asterisco"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Campo de texto: Título -->
        <EditText
            android:id="@+id/etTituloQuiz"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/hint_add_titulo"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#333333"
            android:textColorHint="#AAAAAA"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck" />

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />

        <!-- Título: Descripción (Opcional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:importantForAutofill="no"
            android:text="@string/tv_add_descripcion"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Campo de texto: Descripción -->
        <EditText
            android:id="@+id/etDescripcionQuiz"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_background"
            android:gravity="top|start"
            android:hint="@string/hint_add_descripcion"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="#333333"
            android:textColorHint="#AAAAAA"
            android:textSize="16sp" />

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />

        <!-- NUEVO: Switch para controlar visibilidad -->
        <LinearLayout
            android:id="@+id/switchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_publico_privado"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEsPublico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />

        <!-- NUEVO: Switch para generar con IA -->
        <LinearLayout
            android:id="@+id/iaSwitchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_generar_con_ia"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchGenerarIA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Campos que aparecen cuando el switch está activo -->
            <LinearLayout
                android:id="@+id/iaFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:text="@string/tv_add_num_preguntas"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etNumPreguntasIA"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/hint_num_preguntas"
                    android:inputType="number"
                    android:padding="12dp"
                    tools:ignore="Autofill" />
            </LinearLayout>
        </LinearLayout>

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />

        <!-- Título: Portada o imagen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/tv_add_img"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Contenedor para subir imagen -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvImgContenedor"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Ícono de imagen -->
                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/descripcion_subir_img"
                    android:src="@drawable/ico_add_img"
                    app:tint="#6B7EF7" />
                <!-- Texto opcional -->
                <TextView
                    android:id="@+id/tvImgHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hint_add_img"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón Guardar Quiz -->
        <Button
            android:id="@+id/btnGuardarQuiz"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#6B7EF7"
            android:elevation="4dp"
            android:text="@string/tv_guardar_quizz"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>