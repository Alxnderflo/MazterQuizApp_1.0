<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:backgroundTint="#F8F7FF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Contenedor de imagen con fondo redondeado -->
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#6366F1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/descripcion_quiz_imagen"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    />

            </androidx.cardview.widget.CardView>

            <!-- Contenedor de texto y botón de menú -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtQuizT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/tv_listar_titulo_del_quiz"
                        android:textColor="#1A1A1A"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp" />

                    <!-- Botón de 3 puntitos para menú -->
                    <ImageButton
                        android:id="@+id/btnMore"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/descripcion_btn_mas_opciones"
                        android:padding="6dp"
                        android:src="@drawable/ico_more_vert"
                        app:tint="#FF9800"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <!-- Información del quiz -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp">

                    <!-- Icono de lista para preguntas -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ico_list"
                        app:tint="#6366F1"
                        android:contentDescription="@string/descripcion_preguntas_ico" />

                    <TextView
                        android:id="@+id/txtContarP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/listar_num_preguntas"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <!-- Separador vertical -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#D1D5DB"
                        android:rotation="45" />

                    <!-- Icono de calendario -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ico_date"
                        app:tint="#10B981"
                        android:contentDescription="@string/descripcion_fecha_ico" />

                    <TextView
                        android:id="@+id/txtFechaQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/listar_fecha"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>